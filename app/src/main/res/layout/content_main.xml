<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/content_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.ofir.speekidoll.MainActivity"
    tools:showIn="@layout/activity_main">

    <GridLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"

        android:orientation="horizontal"
        android:layout_gravity="center"
        android:gravity="center_vertical|center"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"

        android:horizontalSpacing="90dp"
        android:verticalSpacing="90dp">


        <Button
            android:text="Manage Stickers"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/manage_stickers_button"
            android:layout_row="0"
            android:layout_column="0"
            android:onClick="menuButtonClicked"
            android:tag="manage_stickers_button"/>

        <Button
            android:text="Manage Programs"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/manage_programs_button"
            android:layout_row="1"
            android:layout_column="0"
            android:onClick="menuButtonClicked"
            android:tag="manage_programs"/>

        <Button
            android:text="Sync Doll"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/sync_doll_button"
            android:layout_row="2"
            android:layout_column="0"
            android:onClick="menuButtonClicked"
            android:tag="sync_doll"/>


        <Button
            android:text="Statistics"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/statistics_button"
            android:layout_row="0"
            android:layout_column="1"
            android:onClick="menuButtonClicked"
            android:tag="statistics"/>

        <Button
            android:text="Home"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/home_button"
            android:layout_row="1"
            android:layout_column="1"
            android:onClick="menuButtonClicked"
            android:tag="home"/>

        <Button
            android:text="Settings"
            android:layout_width="180dp"
            android:layout_height="wrap_content"
            android:id="@+id/settings_button"
            android:layout_row="2"
            android:layout_column="1"
            android:onClick="menuButtonClicked"
            android:tag="settings"/>


    </GridLayout>
</RelativeLayout>
